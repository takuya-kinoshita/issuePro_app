<div class="d-flex align-items-center">
  <h1>Category一覧</h1>
  <div class="ml-auto boards__linkBox">
    <%= link_to "新規作成", new_category_path, class:"btn btn-outline-dark" %>
  </div>

  <div class="ml-auto boards__linkBox">
    <%= link_to "課題一覧", boards_path, class:"btn btn-outline-dark" %>
  </div>
</div>


<%= will_paginate %>

<div class="categories">
  <% @categories.each do |category| %>
    <div class="btn btn-outline-dark">
    <h2><%= link_to "#{category.id}:#{category.name}", "/categories/#{category.id}" %></h2>
    </div>
  <% end %>
</div>
