<div class="d-flex align-items-center">
  <h1>掲示板作成</h1>
  <div class="ml-auto boards__linkBox">
    <%= link_to "掲示板一覧", boards_path, class:"btn btn-outline-dark" %>
  </div>
</div>
<%= form_for @board do |f| %>

  <div class="form-group" >
    <%= f.label :category_id, "カテゴリ（仕事:1, 個人:2, 家族:3)" %>
    <%= f.text_field :category_id, class: "form-control" %>
  </div>


  <div class="form-group" >
    <%= f.label :name, "課題名" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :title, "部品名" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :body, "本文" %>
    <%= f.text_area :body, class:"form-control", rows: 10 %>
  </div>

  <div class="form-group" >
    <%= f.label :name, "担当" %>
    <%= f.text_field :responsible, class: "form-control" %>
  </div>

  <div class="form-group" >
    <%= f.label :name, "期限" %>
    <%= f.text_field :deadline, class: "form-control" %>
  </div>

  <%= f.submit "保存", class: "btn btn-primary" %>

  <span><%= f.file_field :picture %></span>

<% end %>
